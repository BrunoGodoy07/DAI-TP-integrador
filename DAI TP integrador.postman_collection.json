		{
			"name": "Login (save token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"  try {",
							"    const json = pm.response.json();",
							"    const token = json.token || (json.data && json.data.token) || json.accessToken;",
							"    if (token) {",
							"      pm.environment.set('jwt', token);",
							"      pm.test('Token saved to environment', true);",
							"    } else {",
							"      pm.test('No token found in response', false);",
							"    }",
							"  } catch (e) {",
							"    pm.test('Response not JSON', false);",
							"  }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
